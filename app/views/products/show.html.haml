show
.row.justify-content-md-center
  .col-10
    .row.product_show
      .image.pull-left
        =image_tag @product.image.url( :thumb ), class: 'img-thumbnail' if @product.image?
      .button_block.pull-rigth
        %p
          =@product.description
        Price: #{@product.price}
        =simple_form_for( @order_items, url: order_items_path ) do |f|
          =f.input_field :product_id, as: :hidden, value: @product.id
          =f.input :quantity, min: 1
          =f.button :submit

