=simple_form_for(@product) do |f|
  =f.input :name,         placeholder: 'Write name product', label: false
  =f.input :description,  placeholder: 'Describe the product', label: false
  =f.input :category,     collection: @category, prompt: 'Select category product', label: false
  =f.input :price
  =f.input :image, as: :file
  =f.button :submit
